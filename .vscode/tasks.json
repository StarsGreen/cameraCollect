{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build",
            "command": "arm-linux-gnueabihf-gcc",
            "args": [
                "-g",
 //               "-std=c++11", 
//                "${file}",
                "${workspaceRoot}/src/main.c",
                "${workspaceRoot}/src/draw.c",
                "${workspaceRoot}/src/window.c",
                "-o","${workspaceRoot}/bin/openglES-arm",
 //               "${fileDirname}/${fileBasenameNoExtension}",
                "-I", "${workspaceRoot}/include",
 //               "-I","/usr/include/libdrm",
  //               "-I","/usr/include/libdrm",

                "-I","/usr/include",
 //               "-L","/usr/lib/x86_64-linux-gnu",
               "-L","${workspaceRoot}/lib",
                "-l","EGL",
 //               "-l","GL",
                "-l","GLESv2",
                "-l","GLESv1_CM",
  //              "-l","gbm",
   //             "-l","X11",
         ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}